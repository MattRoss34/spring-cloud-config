{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "es2017", "esnext.asynciterable"],
        "module": "commonjs",
        "sourceMap": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*test.ts"]
}