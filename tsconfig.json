{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "es2017", "esnext.asynciterable"],
        "module": "commonjs",
        "declaration": true,
        "sourceMap": false,
        "outDir": "dist",
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules", "test"]
}